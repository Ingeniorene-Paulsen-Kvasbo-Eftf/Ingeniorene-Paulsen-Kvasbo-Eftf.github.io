{
  "compilerOptions": {
    "target": "ES5", // "ES3" (default), "ES5", "ES6"/"ES2015", "ES2016", "ES2017" or "ESNext".
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "allowJs": true,
    "outDir": "dist"
  },
  "include": ["./src/**/*.ts", "./src/**/*.js"]
}
